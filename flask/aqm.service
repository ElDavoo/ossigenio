[Unit]
Description=Air quality monitor backend
After=network.target

[Service]
EnvironmentFile=/home/pi/air-quality-monitor/flask/secrets.env
User=pi
WorkingDirectory=/home/pi/air-quality-monitor/flask/
ExecStart=/usr/bin/gunicorn -b 127.0.0.1:5000 --access-logfile - project:flask_app
#ExecStart=/usr/bin/python3 -m flask run
Restart=always

[Install]
WantedBy=multi-user.target
